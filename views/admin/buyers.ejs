<%- include('../partials/header') %>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1>Buyer Inquiries</h1>
                <a href="/admin/dashboard" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        </div>
    </div>

    <% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger">
        <%= error %>
    </div>
    <% } %>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <% if (buyers && buyers.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Company Name</th>
                                    <th>Contact Person</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Country</th>
                                    <th>Status</th>
                                    <th>Submitted</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% buyers.forEach(buyer => { %>
                                <tr>
                                    <td><%= buyer.companyName %></td>
                                    <td><%= buyer.contactPerson %></td>
                                    <td><%= buyer.email %></td>
                                    <td><%= buyer.phone %></td>
                                    <td><%= buyer.country %></td>
                                    <td>
                                        <span class="badge bg-<%= buyer.status === 'Qualified' ? 'success' : buyer.status === 'Rejected' ? 'danger' : buyer.status === 'Contacted' ? 'info' : 'secondary' %>">
                                            <%= buyer.status %>
                                        </span>
                                    </td>
                                    <td><%= new Date(buyer.submittedAt).toLocaleDateString() %></td>
                                    <td>
                                        <a href="/admin/buyers/<%= buyer._id %>" class="btn btn-sm btn-primary">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                    <% } else { %>
                    <div class="alert alert-info">
                        <h5>No buyer inquiries found</h5>
                        <p>Buyer inquiries will appear here once submitted.</p>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>

